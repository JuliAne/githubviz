    @data.each do |k,v|
      if v['level'] == @level
        @api.get("/users/#{k}/following").each do |m|
          if k['follow']['login'] != m['login'] then
            z[m['login']] = m
            z[m['login']]['level'] = @level+1
            z[m['login']['direction']] = 'following'
            z[m['login']]['follow_count'] = 0
            z[m['login']]['follow'] = @api.get("/users/#{m['login']}/following")
          else 
            k['direction'] == 'bidirectional'
          end
        end
      end
    end
    @data.merge! z
